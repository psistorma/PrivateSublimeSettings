  flowtype-identifier:
    - include: support-class

    - match: \b(?:any|bool|boolean|mixed|number|string|void)\b
      scope: constant.other.primitve.flowtype.ts

    - match: '[_$a-zA-Z][$\w]*'
      scope: variable.other.flowtype.ts

    - match: \?
      scope: keyword.operator.flowtype.optional.ts

  flowtype-tokens:
    - match: (?<=[:?|&=])(?=\s*{)
      push:
