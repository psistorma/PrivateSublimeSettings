    - match: '[*:?&|.]|\.\.\.|\b(typeof)\b'
      scope: keyword.operator.flowtype.other.ts

    - match: '<'
      scope: punctuation.section.flowtype.begin.ts
      push:
      - match: '>'
        scope: punctuation.section.flowtype.end.ts
        pop: true
      - include: flowtype-tokens

    - match: \[
      scope: punctuation.section.flowtype.begin.ts
      push:
